---
const { variant, img, tag, text, link } = Astro.props;
---

<article class={variant}>
  <div class="card-image">
    <img src={img} />
  </div>
  <div class="card-content">
    <p class="tag">{tag}</p>
    <p class="card-text">{text}</p>
    <slot />
  </div>
</article>

<style>
  article {
    text-align: center;
  }


article.featured{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin: 0 0 18px;

/* hele boksen bliver en hvid boks */
  background: #fff;
  border-radius: 6px;
  overflow: hidden;                  
  box-shadow: 0 2px 6px rgba(0,0,0,.08);
}


article.featured .card-image{
  width: 100%;
  aspect-ratio: 4/3;             
}

article.featured .card-image img{
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}


article.featured .card-content{
  padding: 12px;
  margin: 0;
  background: transparent;
  border-radius: 0;
}


article.featured .card-content p{
  margin: 0;
}


article.featured .tag{
  display: inline;
  text-decoration: underline;
  font-size: 10px;
  text-transform: uppercase;
  margin-right: 12px;
}

article.featured .card-text{
  display: inline;
  font-size: 14px;
  line-height: 1.5rem;

font-family: Asar;
font-weight: 400;
font-style: Regular;
font-size: 15px;
line-height: 26px;
letter-spacing: 0%;
}

  img {
    width: 100%;
    object-fit: cover;
    display: block;
  }

  p {
    line-height: 1.25rem;
  }


  .tag {
    text-transform: uppercase;
    font-family: Bodoni Mona;
  }

  .card-content .button {
    margin-top: 1rem;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 0.5rem;
    background-color: #ff6f61;
    color: white;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .card-content .button:hover {
    background-color: #e65c50;
  }

  
</style>
<script></script>
